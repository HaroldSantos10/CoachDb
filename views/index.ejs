
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Libros</h1>
        <ul>

            <hr>

    <div class="container aos-init aos-animate" data-aos="fade-up">
      
      <div class="row">
        <div class="col">

          <form method="post" action="/libro/add">
            <div class="mb-3">
              <label  class="form-label">Nombre Libro</label>
              <input type="text" class="form-control" name="nombre_libro" id="nombre_libro" aria-describedby="emailHelp">
              
            </div>
            <div class="mb-3">
              <label  class="form-label">Autor</label>
              <input type="text" class="form-control" name="autor" id="autor" aria-describedby="emailHelp">
              
            </div>
            <div class="mb-3">
              <label  class="form-label">Pais</label>
              <input type="text" class="form-control" name="pais" id="pais" aria-describedby="emailHelp">
              
            </div>
            <button type="submit" value="submit" class="btn btn-primary">Agregar Libro</button>
          </form>
        </div>
        <div class="col">

          <div class="mb-3" id="list">
            <div class = "card">
                <div class = "card-body">
                    <ul id="listItems">
                                
                        <% libros.forEach(function(libro){ %>

                            <li>
                                <h4>Nombre: <%= libro.value.nombre_libro %></h4>
                                <p>Autor: <%= libro.value.autor %></p>
                                <p>Pais: <%= libro.value.pais %></p>
                                
                                <form method="post" action="/libro/delete/<%= libro.key %>">
                                    <input type="hidden" value="<%= libro.value.rev %>" name="rev">
                                    <button type="submit" value="X" class="btn btn-danger">borrar</button>

                                </form>
                                

                            
                            </li>
                        <%}); %>
                    </ul>

                </div>

            </div>

            

        </div>
        </div>

      </div>
      
      


    </div>





        </ul>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</body>
</html>




